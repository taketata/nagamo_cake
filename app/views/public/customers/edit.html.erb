<div class="container">

  <div class="row mt-4">

    <div class="col-11 mx-auto">

      <h5 class="text-center bg-light col-3">会員情報編集</h5>

    </div>

  </div>

  <%= form_with model: @customer,url: customers_edit_path,method: :patch do |f| %>

  <div class="row mt-4 mx-auto">

    <p class="col-2">氏名</p>

    <div class="col-3">

      <%= f.text_field:last_name,class:'form-control' %>

    </div>

    <div class="col-3">

      <%= f.text_field:first_name,class:'form-control' %>

    </div>

  </div>

  <div class="row mt-2 mx-auto">

    <p class="col-2">フリガナ</p>

    <div class="col-3">

      <%= f.text_field:last_name_kana,class:'form-control' %>

    </div>

    <div class="col-3">

      <%= f.text_field:first_name_kana,class:'form-control' %>

    </div>

  </div>

  <div class="row mt-2 mx-auto">

    <p class="col-2">郵便番号</p>

    <div class="col-3">

      <%= f.text_field:postal_code,class:'form-control' %>

    </div>

  </div>

  <div class="row mt-2 mx-auto">

    <p class="col-2">住所</p>

    <div class="col-8">

      <%= f.text_field:address,class:'form-control' %>

    </div>

  </div>

  <div class="row mt-2 mx-auto">

    <p class="col-2">電話番号</p>

    <div class="col-3">

      <%= f.text_field:telephone_number,class:'form-control' %>

    </div>

  </div>

  <div class="row mt-2 mx-auto">

    <p class="col-2">メールアドレス</p>

    <div class="col-3">

      <%= f.text_field:email,class:'form-control' %>

    </div>

  </div>

  <div class="row mt-2 mb-5">

    <div class="col-2"></div>

    <div class="col-4 ml-2">

      <%= f.submit "編集内容を保存",class:'btn btn-success btn-block' %>

    </div>

    <div class="col-4 text-center">

      <%= link_to "退会する",customers_confirm_path,class:'btn btn-danger' %>

    </div>

  </div>

  <% end %>

</div>
<div class="container">

  <div class="row mt-4">

    <div class="col-10 mx-auto">

      <h5 class="text-center bg-light col-3">配送先編集</h5>

    </div>

  </div>

  <%= form_with model:@address,url: update_address_path(@address.id),method: :patch do |f| %>

  <div class="row mt-5 ml-3">

    <p class="col-3">郵便番号(ハイフンなし)</p>

    <div class="col-3">

      <%= f.text_field:postal_code,class:'form-control' %>

    </div>

  </div>

  <div class="row mt-2 ml-3">

    <p class="col-3">住所</p>

    <div class="col-6">

      <%= f.text_field:address,class:'form-control' %>

    </div>

  </div>

  <div class="row mt-2 ml-3 mb-5">

    <p class="col-3">宛名</p>

    <div class="col-3">

      <%= f.text_field:name,class:'form-control' %>

    </div>

    <div class="col-3"></div>

    <div class="col-3">

      <%= f.submit "変更内容を保存",class:'btn btn-success' %>

    </div>

  </div>

  <% end %>

</div>

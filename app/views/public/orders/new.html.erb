<div class="container">

  <div class="row mt-4">

    <div class="col-10 mx-auto">

      <h5 class="col-3 text-center bg-light">注文情報入力</h5>

    </div>

  </div>

  <%= form_with model: @order,url: orders_confirm_path do |f| %>

  <div class="row">

    <div class="col-11 ml-5 mt-3">

      <p><strong>支払方法</strong></p>

      <div class="form-group ml-5">

        <%= f.radio_button :payment_method, 0 %>
        <%= f.label :payment_method, "クレジットカード" %><br>

        <%= f.radio_button :payment_method, 1 %>
        <%= f.label :payment_method, "銀行振込" %>

      </div>

    </div>

  </div>

  <div class="row mt-3">

    <div class="col-9 ml-5">

      <p><strong>お届け先</strong></p>

      <div class="form-group ml-5">

      <%= f.radio_button :select_address, 0 %>
      <%= f.label :select_address,"ご自身の住所" %><br>
      <p class="ml-4">〒<%= @customer.postal_code %>　<%= @customer.address %></p>
      <p class="ml-4"><%= @customer.last_name %><%= @customer.first_name %></p>

      <%= f.radio_button :select_address, 1 %>
      <%= f.label :select_address,"登録済住所から選択" %><br>
      <%= f.collection_select :address_id, current_customer.addresses, :id, :full_address, {include_blank: '選択してください'},{id: "address",class: 'form-control ml-3 mb-3'} %>

      <%= f.radio_button :select_address, 2 %>
      <%= f.label :select_address,"新しいお届け先" %><br>

      <div class="form-inline mb-2">

      <%= f.label :postal_code,"郵便番号(ハイフンなし)",class:'col-4' %>
      <%= f.text_field:postal_code,class:'form-control col-4',placeholder:'0000000' %><br>

      </div>

      <div class="form-inline mb-2">

      <%= f.label :address,"住所",class:'col-4' %>
      <%= f.text_field:address,class:'form-control col-8',placeholder:'東京都渋谷区代々木' %><br>

      </div>

      <div class="form-inline mb-2">

      <%= f.label :name,"宛名",class:'col-4' %>
      <%= f.text_field:name,class:'form-control col-4',placeholder:'令和道子' %>

      </div>

      </div>

    </div>

  </div>

  <div class="row mb-5">

    <div class="col-3 mx-auto">

      <%= f.submit "確認画面へ進む",class:'btn btn-primary btn-block' %>

    </div>

  </div>

  <% end %>

</div>

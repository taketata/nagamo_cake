<div class="container">

  <div class="row mt-5 mb-5">

    <div class="col-1"></div>

    <div class="col-4">

      <%= attachment_image_tag @item,:image, width:'100%', format: 'jpeg' %>

     </div>

    <div class="col-6 ml-3">

      <strong><%= @item.name %></strong><br>

      <%= @item.introduction %><br>

      ¥<%= @item.add_tax_price.to_s(:dalimited) %> (税込)

      <%= form_with model: @cart_item,url: cart_items_path do |f| %>

        <%= f.hidden_field :item_id,:value => @item.id %>

        <div class="form-inline mt-5">

        <div class="col-5 mt-3">

        <%= f.select :amount,*[1..9],{include_blank: '個数選択'},{id: "amount",class: 'form-control'} %>

        </div>

        <div class="col-4 mt-3">
        <%= f.submit "カートに入れる",class:'btn btn-success' %>
        </div>

        </div>

      <% end %>

    </div>

  </div>

</div>
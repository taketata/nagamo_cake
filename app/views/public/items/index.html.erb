<div class="container">

  <div class="row mt-5">

    <div class="col-2"></div>

    <h4>商品一覧</h4>

    <p>(全<%= @count %>件)</p>

  </div>

  <div class="row">

    <div class="col-2"></div>

    <div class="col-9">

      <div class="row">

        <% @items.each do |item| %>

        <div class="col-3 mt-3">

          <%= link_to item_path(item.id),method: :get do %>

            <%= attachment_image_tag item,:image, width:'100%', format: 'jpeg' %>

            <%= item.name %><br>

          <% end %>

          ¥<%= item.price.to_s(:delimited) %>

        </div>

        <% end %>

        <div class="col-4 mx-auto mt-5 mb-3">

          <%= paginate @items %>

        </div>

      </div>

    </div>

  </div>

</div>
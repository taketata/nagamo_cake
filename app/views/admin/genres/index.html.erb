<div class="container">

  <div class="row">

    <div class="col-md-8">

      <h4 class="text-center">ジャンル一覧</h4>

      <table class="table">

        <tbody>

            <% @genres.each do |genre| %>

            <tr>

              <th><%= genre.name %></th>

              <th><%= link_to "編集",edit_admin_genre_path(genre.id) %></th>

            </tr>

            <% end %>


        </tbody>

      </table>

    </div>

    <div class="col-md-3">

      <h4 class="text-center">ジャンル新規作成</h4>

      <%= form_with model: @genre,url: admin_genres_path do |f| %>

        <div class="form-group mt-3">

          <label for="name">ジャンル名</label>

          <%=f.text_field:name %>

        </div>

        <%= f.submit '登録',class:'btn btn-sm btn-success' %>

      <% end %>

    </div>

 </div>

</div>
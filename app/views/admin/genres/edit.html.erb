<div class="container">

  <div class="row">

    <div class="col-md-5 mx-auto">

      <h2>ジャンル編集</h2>

      <%= form_with model:@genre,url: admin_genre_path(@genre.id),method: :patch do |f| %>

        <h4 class="mt-4">ジャンル名</h4>

        <%= f.text_field:name %>

        <%= f.submit '保存',class:'btn btn-sm btn-primary' %>

      <% end %>

    </div>

  </div>

</div>
<div class="container">

  <div class="row mt-4 mx-auto">

    <div class="col-8">

      <h5 class="bg-light col-4 text-center">ジャンル編集</h5>

    </div>

  </div>

  <%= form_with model:@genre,url: admin_genre_path(@genre.id),method: :patch do |f| %>

  <div class="row my-5">

    <p class="col-2 ml-3 mt-1">ジャンル名</p>

    <%= f.text_field:name,class:'col-3 form-control' %>

    <%= f.submit '変更を保存',class:'btn btn-success ml-4 col-2' %>

  </div>

  <% end %>

</div>
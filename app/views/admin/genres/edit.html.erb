<div class="container">

  <div class="row mt-4 mx-auto">

    <div class="col-8">

      <h5 class="bg-light col-4 text-center">ジャンル編集</h5>

    </div>

  </div>

  <div class="form-group row mx-auto mt-5">

      <div class="col-2">

        <%= form_with model:@genre,url: admin_genre_path(@genre.id),method: :patch do |f| %>

        <label for="name">ジャンル名</label>

      </div>

      <div class="col-3">

        <%= f.text_field:name %>

      </div>

      <div class="col-3">

        <%= f.submit '変更を保存',class:'btn btn-success' %>

        <% end %>

      </div>

  </div>

</div>
<div class="container">

  <div class="row mt-4 mx-auto">

    <div class="col-6">

      <h5 class="bg-light col-4 text-center">会員一覧</h5>

     </div>

  </div>

  <div class="row mx-auto mt-3">

    <div class="col-10">

      <table class="table">

        <thead>

          <tr class="table-secondary">

            <th>会員ID</th>

            <th>氏名</th>

            <th>メールアドレス</th>

            <th>ステータス</th>

          </tr>

        </thead>

        <tbody>

          <% @customers.each do |customer| %>

            <tr>

              <td><%= customer.id %></td>

              <td>
                <%= link_to admin_customer_path(customer.id),class:'border-bottom border-dark text-dark',method: :get do %>
                  <%= customer.last_name %>
                <% end %>
              </td>

              <td><%= customer.first_name %></td>

              <td>
              <% if customer.is_active == false %>
                <p class="text-success">有効</p>
              <% else %>
                <p class="text-muted">退会</p>
              <% end %>
              </td>

            </tr>

          <% end %>

        </tbody>

      </tabel>

    </div>

    <%= paginate @customers %>

  </div>

</div>

<div class="container">

  <div class="row mt-4 mx-auto">

    <div class="col-8">

      <h5 class="bg-light col-6 text-center">
        <%= @customer.last_name %><%= @customer.first_name %> さんの会員詳細
        </h5>

    </div>

  </div>

  <div class="row">

    <div class="col-6">

      <table class="table table-borderless mt-4">

        <tbody>

          <tr>

            <td>会員ID</td>

            <td><%= @customer.id %></td>

          </tr>

          <tr>

            <td>氏名</td>

            <td><%= @customer.last_name %> <%= @customer.first_name %></td>

          </tr>

          <tr>

            <td>フリガナ</td>

            <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>

          </tr>

          <tr>

            <td>郵便番号</td>

            <td><%= @customer.postal_code %></td>

          </tr>

          <tr>

            <td>住所</td>

            <td><%= @customer.address %></td>

          </tr>

          <tr>

            <td>電話番号</td>

            <td><%= @customer.telephone_number %></td>

          </tr>

          <tr>

            <td>メールアドレス</td>

            <td><%= @customer.email %></td>

          </tr>

          <tr>

            <td>会員ステータス</td>

            <td>
              <% if @customer.is_active == false %>
                <p class="text-success">有効</p>
              <% else %>
                <p class="text-muted">退会</p>
              <% end %>
            </td>

          </tr>

        </tbody>

      </table>


    </div>

  </div>

  <div class="row mb-5">

    <div class="col-3"></div>

    <div class="col-4">

      <%= link_to "編集する",edit_admin_customer_path(@customer.id),class:'btn btn-success' %>

    </div>

  </div>

</div>
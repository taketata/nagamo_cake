<div class="container">

  <div class="row mt-4 mx-auto">

    <div class="col-8">

      <h5 class="text-center bg-light col-3">商品詳細</h5>

    </div>

  </div>

  <div class="row mt-5">

    <div class="col-4 text-center">

      <%= attachment_image_tag @item,:image, :fill, 200, 150, format: 'jpeg' %>

    </div>


      <div class="col-5">

        <table class="table table-borderless">

          <tr>

            <td>商品名</td>

            <td><%= @item.name %></td>

          </tr>

          <tr>

            <td>商品説明</td>

            <td><%= @item.introduction %></td>

          </tr>

          <tr>

            <td>ジャンル</td>

            <td>ジャンル</td>

          </tr>

          <tr>

            <td>税込価格<br>(税抜価格)</td>

            <td><%= @item.add_tax_price.to_s(:dalimited) %>(<%= @item.price %>) 円</td>

          </tr>

          <tr>

            <td>販売ステータス</td>

            <td>販売中</td>

          </tr>

          <tr>

            <td><%= link_to "編集する",edit_admin_item_path(@item.id),class:'btn btn-success' %></td>

          </tr>

        </table>

    </div>

  </div>

</div>
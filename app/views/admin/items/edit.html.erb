<div class="container">

  <div class="row mt-4 mx-auto">

    <div class="col-8">

      <h5 class="text-center bg-light col-3">商品編集</h5>

    </div>

  </div>

  <div class="row">

    <div class="col-10 mt-4 mx-auto">

      <table class="table table-borderless">

        <tbody>

          <%= form_with model:@item,url: admin_item_path(@item.id) do |f| %>

          <tr>

            <td>商品画像</td>

            <td><%= f.attachment_field:image %></td>

          </tr>

          <tr>

            <td>商品名</td>

            <td><%= f.text_field:name,class:'form-control',placeholder:'商品名' %></td>

          </tr>

          <tr>

            <td>商品説明</td>

            <td><%= f.text_area:introduction,class:'form-control',size: "40x6",placeholder:'ここに説明文を記述します' %></td>

          </tr>

          <tr>

            <td>ジャンル</td>

            <td>ジャンル </td>

          </tr>

          <tr>

            <td>税抜価格</td>

            <td><%= f.text_field:price,class:'form-control',placeholder:'1,000' %></td>

          </tr>

          <tr>

            <td>販売ステータス</td>

            <td>販売中</td>

          </tr>

          <tr class="text-center">

            <td><%= f.submit "変更を保存",class:'btn btn-success btn-lg' %></td>

          </tr>

          <% end %>

        </tbody>

      </table>

    </div>

  </div>

</div>
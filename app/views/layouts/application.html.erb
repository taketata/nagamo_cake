<!DOCTYPE html>
<html>
  <head>
    <title>NagamoCake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">

    <header class="border-dark border-bottom">

      <nav class="navbar navbar-expand-lg navbar-light">

        <div class="container">

          <a clss="navber-brand" href="/">
            <p class="text-white bg-dark">nagano_cake</p>
          </a>

          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">

            <span class="navbar-toggler-icon"></span>

          </button>

           <div class="collapse navbar-collapse" id="navbarNavDropdown">

            <ul class="navbar-nav ml-auto">

              <% if admin_signed_in? %>

                <li class="nav-item mr-3">
                  <%= link_to "ジャンル一覧へ",admin_genres_path,class:'nav-link text-body' %>
                </li>

                <li class="nav-item mr-3">
                  <%= link_to "商品一覧へ",admin_items_path,class:'nav-link text-body' %>
                </li>

                <li class="nav-item mr-3">
                  <%= link_to "会員一覧へ",admin_customers_path,class:'nav-link text-body' %>
                </li>

                <li class="nav-item mr-3">
                  <%= link_to "ログアウト",destroy_admin_session_path,method: :delete,class:'nav-link text-body' %>
                </li>

              <% elsif customer_signed_in? %>

                <li class="nav-item">
                <%= link_to "マイページ",customers_path,class:'nav-link text-body' %>
                </li>

                <li class="nav-item">
                <%= link_to "ログアウト",destroy_customer_session_path,method: :delete,class:'nav-link text-body' %>
                </li>

              <% else %>

                <li class="nav-item">
                <%= link_to "新規登録",new_customer_registration_path,class:'nav-link text-body' %>
                </li>

                <li class="nav-item">
                <%= link_to "ログイン",new_customer_session_path,class:'nav-link text-body' %>
                </li>

              <% end %>

            </ul>

          </div>

        </div>

      </nav>

    </header>

    <%= yield %>
    <footer class="border-dark border-top"></footer>
  </body>
</html>
